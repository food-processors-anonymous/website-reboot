body {
  color: #333; }

.profilePicture {
  width: 100px;
  height: 100px;
  background-size: contain; }

.cardContainer {
  display: flex;
  flex-wrap: wrap; }

.cardItem {
  display: inline-block;
  flex: 0 0 33.3333%;
  min-width: 200px; }

.growToFit {
  flex-grow: 1; }

.productCard {
  display: inline-block; }

.featuredCard {
  display: inline-block;
  padding: 2em;
  margin: 1em;
  border: thin solid black;
  box-shadow: 1px 1px 5px #666; }
